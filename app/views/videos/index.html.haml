.body
  .header
    .header__navbar
    .header__navbar__signup
      - if user_signed_in?
        =link_to"ログアウト",destroy_user_session_path
        =link_to"マイページ","/users/#{current_user.id}"
      
      - else
        =link_to '新規登録', new_user_session_path
        =link_to 'ログイン', user_session_path    
    .header__navbar__category
      =link_to'カテゴリー'
  .main
    .main__search
      =form_with url:"#", local: true do |f|
        =f.text_field :keyword, placeholder:"検索する",class:"search-input"
        =f.submit '検索', class:'search-btn'
    
  .content
    .content__left
      #move
      .content__left__input
        -# %input{:type => "text",:id => "url"}/
        -# %br/
        -# %input{:type => "submit", :value => "保存",class:'save-btn'}/
        -# %br/
        =form_for @video,url:'/videos' ,id: 'url',remote: true do |f|
          =f.text_field 'text',id: 'url'
          =f.submit '保存',class: 'save-btn'

    .content__right
      .content__right__list
        .content__right__list__move

  .footer
    =link_to'利用規約'